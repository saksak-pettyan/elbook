<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kaneko.elbook.mapper.UserMapper">

	<!-- User ドメインクラス用の resultMap -->
	<resultMap id="UserResultMap" type="com.kaneko.elbook.domain.User">
		<id property="userId" column="USER_ID" />
		<result property="userName" column="USER_NAME" />
		<result property="loginId" column="LOGIN_ID" />
		<result property="passwordHash" column="PASSWORD_HASH" />
		<result property="status" column="STATUS" />
		<result property="createdAt" column="CREATED_AT" />
		<result property="updatedAt" column="UPDATED_AT" />
	</resultMap>

	<!-- 共通：T_USER のカラム一覧（大文字のカラム名のまま） -->
	<sql id="userColumns">
		USER_ID,
		USER_NAME,
		LOGIN_ID,
		PASSWORD_HASH,
		STATUS,
		CREATED_AT,
		UPDATED_AT
	</sql>

	<!-- 利用者一覧（氏名部分一致） -->
	<select id="selectList" resultMap="UserResultMap"> SELECT <include
			refid="userColumns" /> FROM T_USER <where>
			<if test="userNameLike != null and userNameLike != ''">
				AND USER_NAME LIKE CONCAT('%', #{userNameLike}, '%')
			</if>
		</where>
		ORDER BY USER_ID ASC </select>

	<!-- 主キー取得 -->
	<select id="selectById"
		parameterType="long"
		resultMap="UserResultMap"> SELECT <include refid="userColumns" /> FROM
		T_USER WHERE USER_ID = #{userId} </select>

	<!-- ログインIDで取得 -->
	<select id="selectByLoginId"
		parameterType="string"
		resultMap="UserResultMap"> SELECT <include refid="userColumns" /> FROM
		T_USER WHERE LOGIN_ID = #{loginId} </select>

	<!-- 新規登録 -->
	<insert id="insert"
		parameterType="com.kaneko.elbook.domain.User"
		useGeneratedKeys="true" keyProperty="userId">
		INSERT INTO T_USER (
		USER_NAME,
		LOGIN_ID,
		PASSWORD_HASH,
		STATUS,
		CREATED_AT,
		UPDATED_AT
		) VALUES (
		#{userName},
		#{loginId},
		#{passwordHash},
		#{status},
		NOW(),
		NOW()
		)
	</insert>

	<!-- 更新 -->
	<update id="update"
		parameterType="com.kaneko.elbook.domain.User">
		UPDATE T_USER
		SET
		USER_NAME = #{userName},
		LOGIN_ID = #{loginId},
		STATUS = #{status},
		UPDATED_AT = NOW()
		WHERE
		USER_ID = #{userId}
	</update>

	<!-- パスワードハッシュ更新 -->
	<update id="updatePassword">
		UPDATE T_USER
		SET
		PASSWORD_HASH = #{passwordHash},
		UPDATED_AT = NOW()
		WHERE
		USER_ID = #{userId}
	</update>

</mapper>
